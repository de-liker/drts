{
  "extends": [
    "config:base"
  ],
  "packageRules": [{
      "matchPackagePatterns": [
        "*"
      ],
      "rangeStrategy": "replace"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "rangeStrategy": "pin"
    }
  ],
  "rebaseStalePrs": true,
  "lockFileMaintenance": {
    "enabled": true,
    "recreateClosed": true
  }
}
